

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>

  <br>
  <strong>Doses:</strong>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %> of
    <%= dose.ingredient.name %>
    <%= link_to "delete", dose_path(dose), method: :delete %>
    <br>
  <% end %>
</p>

<%= cl_image_tag @cocktail.photo, width: 400, height: 300, crop: :fill %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.input :cocktail_id, :as => :hidden, :input_html => { :value => @cocktail.id } %>
  <%= f.submit "add a dose", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', cocktails_path %>
